<div class="row">
  <div class="col-xs-14">
    <div class="row">
      <div class="col-md-12">
        <%= link_to raw('<i class="fa fa-plus-square"></i> Create Album'), new_galleries_album_path(), class: 'btn btn-default' %>
      </div>
    </div>
    <br/>
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><span class="glyphicon glyphicon-th"></span> Albums</strong>
      </div>
      <table class="table">
        <thead>
          <th>#</th>
          <th>Name</th>
          <th>description</th>
          <th>Public</th>
          <th>Created By</th>
          <th>&nbsp;</th>
        </thead>
        <tbody>
          <% @galleries_albums.each_with_index do |album, index| %>
            <tr>
              <td><%= "#{index + 1}" %></td>
              <td><%= link_to "#{album.name}",  galleries_album_path(album) %></td>
              <td><%= truncate(album.description,:length => 25) %></td>
              <td><%= album.public_display %></td>
              <td><%= album.try(:user).try(:fullname) %></td>
              <td align="right">
                <%=link_to raw('<span class="glyphicon glyphicon-eye-open"></span> view'), galleries_album_path(album), class: 'btn btn-success btn-xs' %>
                <%=link_to raw('<span class="glyphicon glyphicon-th"></span> Galleries'), galleries_album_galleries_path(album), class: 'btn btn-success btn-xs' %>
                <%=link_to raw('<span class="glyphicon glyphicon-pencil"></span> Edit'), edit_galleries_album_path(album), class: 'btn btn-primary btn-xs' %>
                <%=link_to raw('<span class="glyphicon glyphicon-trash"></span> Delete'), galleries_album_path(album), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
