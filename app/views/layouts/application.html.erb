<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Jimmy`s Panel Beaters </title>
    <%= csrf_meta_tags %>
    <!-- Main css styles -->
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <!-- Main javascript files -->
    <%= javascript_include_tag 'application'		%>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body >
    <!--top_bar_page start here-->
    <%= render 'layouts/top_bar_page'%>
    <!--top_bar_page end here-->

    <!-- top navigation start here -->
    <%= render 'layouts/top_navigation'%>
    <!-- top navigation end here -->

    <!--breadcrumbs start-->
    <div class="breadcrumb-wrap">
      <%= render 'layouts/breadcrumb_nav'%>
    </div>
    <!--breadcrumbs end-->
    <div class="divide40"></div>
    <div class="container" >
      <div class="row">
        <!--sidebar col end-->
        <%= render 'layouts/side_navigation'%>
        <!--sidebar col end-->
        <div class="col-sm-9 well" data-pjax-container>
          <%if flash[:notice].present? %>
            <div class=" alert-success alert">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <%= flash[:notice]%>
            </div>
          <%end%>
          <!-- <div class="page-header">
            <h3><%= @page_name%></h3>
          </div> -->
          <%= yield%>
        </div>
      </div>
    </div><!--side navigation container-->
    <div class="divide60"></div>
    <!--footer start-->
    <%= render 'layouts/footer'%>
    <!--footer end-->
  </body>
</html>
