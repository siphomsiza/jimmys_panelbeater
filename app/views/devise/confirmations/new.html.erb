<h2>Resend confirmation instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post ,:class => "devise_form"}) do |f| %>
  <div class="form-group">
    <%= show_alert_messages %>
    <%= f.full_error :confirmation_token %>
  </div>

  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend",class: "btn btn-theme-bg" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
