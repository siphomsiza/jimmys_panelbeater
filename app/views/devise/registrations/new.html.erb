<h2>Sign up</h2>

<%= simple_form_for(resource,:html => {:class => "devise_form"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= show_alert_messages %>
  </div>

  <div class="form-group">
    <%= f.input :firstname ,placeholder: "Firstname"%>
  </div>

  <div class="form-group">
    <%= f.input :lastname ,placeholder: "Lastname"%>
  </div>

  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up",class: "btn btn-theme-bg" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
